##
#
# Environment Selecter: macport, boxen
#
##


# Required only for Mac OSX 
if [ "$(uname)" == "Darwin" ]; then

	# Some default initialization
	export GIT_CONFIG=$HOME/Dotfiles/gitconfig

	# setup macports environment
	env_macport(){

		MY_ENV_OLDPS1=$PS1
		export GIT_CONFIG=$HOME/Dotfiles/gitconfig
		# Start setting macport environment
		if [[ "$PATH" != *"/opt/local/Library/Frameworks/Python.framework/Versions/2.7/bin"* ]]; then
			export PATH=/opt/local/Library/Frameworks/Python.framework/Versions/2.7/bin:$PATH
		fi
	
		if [[ "$PATH" != *"/opt/local/sbin"* ]]; then
			export PATH=/opt/local/sbin:$PATH
		fi
	
		if [[ "$PATH" != *"/opt/local/bin"* ]]; then
			export PATH=/opt/local/bin:$PATH
		fi
	
		export PS1="(macports)$MY_ENV_OLDPS1"
		echo "Macports environment added to path"
		alias deactivate_macports="exit"
		unset env_macport
		unset env_boxen
	}

	# setup	boxen environment
	env_boxen(){
		MY_ENV_OLDPS1=$PS1
		export GIT_CONFIG=$HOME/Dotfiles/gitconfig_boxen
		# Start setting boxes environment
		[ -f /opt/boxen/env.sh ] && source /opt/boxen/env.sh
		export PS1="(boxen)$MY_ENV_OLDPS1"
		echo "Boxen environment added to path"
		alias deactivate_boxen="exit"
		unset env_boxen
		unset env_macport
	}
else
   echo "Already in an environment. Please deactivate it first."
   return;
fi

