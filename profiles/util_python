# startup script for python
export PYTHONSTARTUP=$PROFILE/pythonstartup

# Activate virtual environment
function pyenv { source /Users/ashish/workspaces/$@/bin/activate ;}

# For virtualenvwrapper
export WORKON_HOME=$HOME/.virtualenvs

# Create the directory if it does not exist
[ -d $WORKON_HOME ] || mkdir -p $WORKON_HOME

# Check if the virtualenvwrapper is installed
[ -e /usr/local/bin/virtualenvwrapper.sh ] || echo "virtualenvwrapper is not installed - sudo pip install virtualenvwrapper"
# Source it
[ -e /usr/local/bin/virtualenvwrapper.sh ] && source /usr/local/bin/virtualenvwrapper.sh


 

